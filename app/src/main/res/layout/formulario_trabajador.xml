<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Formulario"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idMedidorFormulario"
                android:enabled="false"
                android:hint=""></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:textSize="20dp"
                android:text="Trabajo realizado"></TextView>

            <Spinner
                android:id="@+id/trabajoRealizado"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:entries="@array/trabajos"></Spinner>
            <EditText
                android:id="@+id/resultadoQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Resultado QR"></EditText>

            <EditText
                android:id="@+id/observacionesTrabajador"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:hint="Observaciones"></EditText>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnQR"
                android:text="Capturar codigo QR"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="75px">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guardarTrabajo"
                android:text="Guardar"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="100px"
                android:layout_gravity="center_vertical">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/volverTrabajo"
                android:text="Volver"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="100px"
                android:layout_gravity="center_vertical">

            </Button>


        </LinearLayout>
    </ScrollView>

</LinearLayout>